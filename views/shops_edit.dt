extends layout_default

block contents
	article.container
		header.row
			.col-12
				h2& Edit Shop
		section.row
			form(action="/shops", method="PUT")
                .mb-3
                    input(type="hidden", name="_id", value="#{shop._id}")
                include shops__form
                .mb-3
					button.btn.btn-secondary(onclick="javascript::window.close()")& Cancel
					button.btn.btn-primary(type="submit")& Confirm
